* {
    box-sizing: border-box;
}

.header {
    text-align: center;
    font-family: Garamond;
    color: black;
    background-color: pink;
    font-size: 40px;
    padding: 20px;
}

.header2 {
    text-align: center;
    font-family: Garamond;
    color: black;
    background-color: pink;
    font-size: 20px;
    padding: 10px;
}

.main {
    padding: 20px;
    font-family: Garamond;
    color: black;
}

.topnav {
    font-family: Garamond;
    font-size: 1vw;
    background-color: rgb(100, 0, 125);
    overflow: hidden;
    text-align: center;
    padding: 10px 0;
}

.topnav a {
    color: white;
    padding: 10px 15px;
    text-decoration: none;
    display: inline-block;
}

.topnav a:hover {
    background-color: rgba(255, 255, 255, 0.2);
}
